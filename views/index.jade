  body
    center
        #container(ng-app="welcome")
            #loginpanel.loginpanel.active(ng-controller="sign_in")
                input#emailpseudoinput_login.login.input(type="text" placeholder="email/pseudo" maxlength="50" ng-model="emailpseudo_login")
                br
                input#pwinput_login.login.input(type="password" placeholder="password" ng-model="wp_login")
                br
                input#loginbutton_login.login(type="button" value="Log in" ng-click="login()")
                p#gotoreg_login.login You don&apos;t have an account yet? Register here
            #registerpanel.registerpanel(ng-controller="sign_up")
                input#emailinput_reg.reg.input(type="text" placeholder="email" ng-model="email_reg")
                input#nameinput_reg.reg.input(type="text" placeholder="name" ng-model="name_reg")
                input#pseudoinput_reg.reg.input(type="text" placeholder="pseudonym (optional)" ng-model="pseudo_reg")
                input#pwinput_reg.reg.input(type="password" placeholder="password" ng-model="wp_reg")
                input#pwrinput_reg.reg.input(type="password" placeholder="repeat password" ng-model="wpr_reg")
                br
                input#regbutton_reg.reg(type="button" value="Create my account" ng-cick="register()")
                p#gotologin_reg You already have an account? Log in here