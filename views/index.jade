html
  head
    meta(charset='utf8')
    //color for chrome
    meta(name="theme-color" content="#3F51B5")
    title Welcome to Ping!
    link(rel='stylesheet', href='/components/bootstrap/bootstrap_paper.css')
    link(rel='stylesheet', href='/stylesheets/welcome.css')
    script(src='/components/angular/angular.js')
    script(src='/components/jquery/jquery.js')
    script(src='/components/jquery/jquery-ui/jquery-ui.js')

    // javascript files
    script(src='/javascripts/ajax.js')
    script(src='/javascripts/bg.js')
    script(src='/javascripts/start.js')
    script(src='/javascripts/misc.js')
    script(src='/javascripts/info.js')
    script(src='/javascripts/welcome/welcome.js')

    script.
        $(document).ready(function() {
            https_redirect();
            start_welcome();
        });       

  body
    #bgcontainer
        img.bgfade(src="/images/austria_sg.jpg")
        img.bgfade(src="/images/greece_olivetree.jpg")
        img.bgfade(src="/images/greece_olivetree_closeup.jpg")
    center
        #container(ng-app="welcome")
            #loginpanel.loginpanel.active(ng-controller="sign_in")
                input#emailpseudoinput_login.login.input(type="text" placeholder="email/pseudonym" maxlength="50" ng-model="emailpseudo_login")
                br
                input#pwinput_login.login.input(type="password" placeholder="password" ng-model="wp_login")
                br
                input#loginbutton_login.login(type="button" value="Log in" ng-click="login()")
                br
                #checkbox_div.login
                    label#label_saveuname save username
                    input#checkbox_saveuname.login(type="checkbox", name="sld", value="savelogindata")
                p#gotoreg_login.login You don&apos;t have an account yet? Register here
            #registerpanel.registerpanel(ng-controller="sign_up")
                input#emailinput_reg.reg.input(type="text" placeholder="email" ng-model="email_reg")
                input#nameinput_reg.reg.input(type="text" placeholder="name" ng-model="name_reg")
                input#pseudoinput_reg.reg.input(type="text" placeholder="pseudonym (optional)" ng-model="pseudo_reg")
                input#pwinput_reg.reg.input(type="password" placeholder="password" ng-model="wp_reg")
                input#pwrinput_reg.reg.input(type="password" placeholder="repeat password" ng-model="wpr_reg")
                br
                input#regbutton_reg.reg(type="button" value="Create my account" ng-click="register()")
                p#gotologin_reg You already have an account? Log in here
    #footer
        img(src="/images/ping_logo.png")
        p#errors